<div style=" 
  background: #ffffff;
  border-radius: 16px;
  padding: 25px 35px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  border: 1px solid #e0e0e0;
  margin-top: 40px;
">
  <h2 style="
    font-size: 1.8rem;
    font-weight: 700;
    color: #1a5748;
    border-bottom: 2px solid #1a5748;
    padding-bottom: 8px;
  ">
    {{#if sensor.id}}Editar Sensor{{else}}Cadastro de Sensor{{/if}}
  </h2>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form 
    method="post" 
    action="{{#if sensor.id}}/sensor/editar/{{sensor.id}}{{else}}/sensor/novo/salvar{{/if}}" 
    style="
      display: flex;
      flex-direction: column;
      gap: 10px;
      flex-grow: 1;
    "
  >

    <!-- Nome -->
    <label 
      for="nomeSensor" 
      style="
        font-weight: 600; 
        color: #133E34;
      "
    >Nome</label>
    <input 
      type="text" 
      name="nome" 
      id="nomeSensor" 
      value="{{sensor.nome}}" 
      required
      style="
        flex: 1;          
        border-radius: 10px;
        border: 1px solid #E5E5E5;
        padding: 10px 14px;
      "
    >

    <!-- Tipo de Sensor -->
    <label 
      for="tipo_sensor" 
      style="
        font-weight: 600; 
        color: #133E34;
      "
    >Tipo de Sensor</label>
    <select 
      name="tipo_sensor_id" 
      id="tipo_sensor"
      required
      style="
        width: 100%;
        border-radius: 10px; 
        border: 1px solid #E5E5E5; 
        padding: 10px;
      "
    >
      <option value="">Selecione</option>
      {{#each tiposSensores}}
        <option value="{{this.id}}" {{#ifEquals this.id ../sensor.tipoSensor?.id}}selected{{/ifEquals}}>
          {{this.nome}} ({{this.unidade_medida}})
        </option>
      {{/each}}
    </select>

    <!-- Localização -->
    <label 
      for="localizacaoSensor" 
      style="
        font-weight: 600; 
        color: #133E34;
      "
    >Localização</label>
    <input 
      type="text" 
      name="localizacao" 
      id="localizacaoSensor" 
      value="{{sensor.localizacao}}" 
      placeholder="Ex: Horta"
      style="
        flex: 1;          
        border-radius: 10px;
        border: 1px solid #E5E5E5;
        padding: 10px 14px;
      "
    >

    <!-- Status -->
    <label 
      style="
        font-weight: 600; 
        color: #133E34;
      "
    >Status</label>
    <div style="
      display: flex;
      gap: 15px;
      align-items: center;
    ">
      <label style="color: #333;">
        <input 
          type="radio" 
          name="status" 
          value="true"
          {{#if sensor.status}}checked{{/if}}
          style="accent-color: #1A5748; margin-right: 5px;"
        >
        Ativo
      </label>
      <label style="color: #333;">
        <input 
          type="radio" 
          name="status" 
          value="false"
          {{#unless sensor.status}}checked{{/unless}}
          style="accent-color: #1A5748; margin-right: 5px;"
        >
        Inativo
      </label>
    </div>

    <!-- Botões -->
    <div
      style="
        display: flex;
        justify-content: center; 
        gap: 20px;
        margin-top: 30px;
      "
    >
      <a href="/sensor"
        style="
          background-color: #CDE3DC;
          border: none;
          color: #133E34;
          font-weight: 500;
          border-radius: 10px;
          padding: 10px 18px;
          text-decoration: none;
        "
      >
        <i class="fa-solid fa-circle-xmark"></i>                   
        <span>Cancelar</span>
      </a>

      <button 
        type="submit" 
        style="
          background-color: #133E34;
          border: none;
          color: white;
          font-weight: 500;
          border-radius: 10px;
          padding: 10px 18px;
        "
      >
        {{#if sensor.id}}Atualizar{{else}}Cadastrar{{/if}}     
      </button>
    </div>

  </form>
</div>